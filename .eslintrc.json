{
  "extends": [
    // Next.jsの推奨設定を継承
    // https://nextjs.org/docs/basic-features/eslint#disabling-rules
    "next",
    "next/core-web-vitals",
    // Prettierプラグインの推奨設定を継承
    // https://github.com/prettier/eslint-plugin-prettier#recommended-configuration
    "plugin:prettier/recommended"
  ],
  // 使用するESLintプラグインを指定
  "plugins": [
    "prettier",
    "unused-imports",
    "import"
  ],
  // ルールを指定
  "rules": {
    // import/orderルールの設定
    "import/order": [
      "error",
      {
        // グループの定義
        "groups": [
          // ビルトインモジュール
          "builtin",
          // 外部ライブラリ
          "external",
          // プロジェクト内のモジュール
          "internal",
          // 親ディレクトリ内のモジュール、同じディレクトリ内のモジュール
          ["parent", "sibling"],
          // オブジェクト
          "object",
          // ルートディレクトリ
          "index",
          // 型定義
          "type"
        ],
        // グループ間に改行を挿入する
        "newlines-between": "always",
        // アルファベット順で並び替える
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        // グループにパスを振り分ける
        "pathGroups": [
          // reactやreact-domはbuiltinに振り分ける
          {
            "pattern": "{react,react-dom}",
            "group": "builtin",
            "position": "before"
          }
        ],
        // builtinやobjectのimport typeがグループ化から除外されるように指定
        "pathGroupsExcludedImportTypes": ["builtin", "object"]
      }
    ],
    // 未使用のimportがある場合にエラーを出す
    "unused-imports/no-unused-imports": "error",
    // 同じファイル内で重複したimportがある場合にエラーを出す
    "import/no-duplicates": "error",
    // console.error以外のconsoleを禁止する
    "no-console": ["error", { "allow": ["error"] }],
    // ReactのJSXのpropsを並び替える
    "react/jsx-sort-props": [
      "error",
      {
        // コールバック関数のプロパティを最後に配置する
        "callbacksLast": true,
        // ショートハンド記法のプロパティを先に配置する
        "shorthandFirst": true,
        // ショートハンド記法のプロパティを最後に配置しない
        "shorthandLast": false,
        // 大文字小文字を区別しない
        "ignoreCase": true,
        // アルファベット順にはソートしない
        "noSortAlphabetically": false,
        // リザーブドワードを先頭に配置する
        "reservedFirst": true
      }
    ]
  }
}
